# Production Environment Configuration for Expense Tracker
# Copy this file to .env and update the values for production deployment

# Database Configuration
DATABASE_URL="postgresql://postgres:CHANGE_THIS_PASSWORD@postgres:5432/financetracker"
POSTGRES_DB="financetracker"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="CHANGE_THIS_TO_SECURE_PASSWORD"

# JWT Secret (CRITICAL: Change this to a secure random string)
JWT_SECRET="CHANGE_THIS_TO_SECURE_RANDOM_STRING_32_CHARS_MINIMUM"

# App Configuration
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NODE_ENV="production"

# Email Configuration (Required for notifications)
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://redis:6379"

# Security Headers (Optional)
SECURITY_HEADERS="true"

# Logging Configuration
LOG_LEVEL="info"

# Rate Limiting (Optional)
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# File Upload Configuration
MAX_FILE_SIZE="5242880"  # 5MB in bytes
UPLOAD_DIR="/app/uploads"

# Session Configuration
SESSION_SECRET="CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING"

# CORS Configuration (if needed)
CORS_ORIGIN="https://your-domain.com"

# Health Check Configuration
HEALTH_CHECK_ENABLED="true"

# Backup Configuration (Optional)
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"