{
  "name": "expense-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "setup": "node setup-database.js",
    "verify": "node verify-integration.js",
    "db:reset": "prisma db push --force-reset && prisma generate",
    "docker:setup": "./scripts/docker-setup.sh",
    "docker:verify": "./scripts/verify-docker-setup.sh",
    "docker:prod": "docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:studio": "docker-compose --profile tools up -d",
    "docker:stop": "docker-compose down && docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --rmi all",
    "deploy:prod": "./scripts/deploy-production.sh deploy",
    "deploy:verify": "./scripts/deploy-production.sh verify",
    "deploy:logs": "./scripts/deploy-production.sh logs",
    "deploy:stop": "./scripts/deploy-production.sh stop"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@tanstack/react-query": "^5.14.2",
    "@types/nodemailer": "^7.0.4",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "framer-motion": "^10.16.16",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "next": "^14.2.33",
    "nodemailer": "^7.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8",
    "prisma": "^5.20.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
